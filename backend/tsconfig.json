{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.ImportScripts",
      "ScriptHost"
    ],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["../shared/*"],
      "@/shared": ["../shared"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "../shared/**/*", "../supabase/**/*"],
  "exclude": ["node_modules", "dist"]
}